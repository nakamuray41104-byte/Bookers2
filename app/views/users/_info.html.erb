<% if user.profile_image.attached? %>
  <%= image_tag user.get_profile_image(100, 100) %>
<% else %>
  <div style="width: 100px; height: 100px; background-color: #ccc; display: flex; align-items: center; justify-content: center; color: #666; font-size: 12px;">
    No Image
  </div>
<% end %>

<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<div class="row">
  <% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>